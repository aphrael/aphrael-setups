nginx:
  version: '1.4.2'
  dir: /opt/nginx
  init_style: upstart
  source:
    checksum: 5361ffb7b0ebf8b1a04369bc3d1295eaed091680c1c58115f88d56c8e51f3611

aphrael:
  default_domain: <%= domain %>
  volumes_root:   '/var/volumes'
  apps:
    repos:
      owner: yuanying
      group: developer
      hostname: repos
      domain: <%= domain %>
      auth_basic:
        name: "Repository"
        users:
          - <%= private_options[:auth_basic][:yuanying] %>
      image:
        name: 'yuanying/grack'
      exec_user: '1101'
      host_http_port: 9872
      container_http_port: 9872
      host_dir: /var/volumes/repositories
      container_dir: /var/repos
    rep2:
      owner: yuanying
      group: developer
      hostname: rep2
      domain: <%= domain %>
      auth_basic:
        name: "Rep2"
        users:
          - <%= private_options[:auth_basic][:yuanying] %>
      image:
        name: 'yuanying/rep2'
      exec_user: '1101'
      host_http_port: 8081
      container_http_port: 8080
      host_dir: /var/volumes/rep2
      container_dir: /p2-php/data

mysql:
  server_port: 3306
  server_root_password: <%= common_password %>
  databases:
    - name: postfix
      encoding: utf8
  users:
    - name: postfix
      password: <%= common_password %>
      host: '%'
      database: postfix

'email-server':
  hostname: mail.<%= domain %>

postfixadmin:
  setup_password: <%= private_options[:postfixadmin][:setup_password] %>